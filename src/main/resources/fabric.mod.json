  "id": "${id}",
  "version": "${version}",
  "name": "${name}",
  "description": "${desc}",
  "authors": [
    "litetex"
  ],
  "contact": {
    "homepage": "https://github.com/litetex-oss/mcm-${id}",
    "sources": "https://github.com/litetex-oss/mcm-${id}",
    "issues": "https://github.com/litetex-oss/mcm-${id}/issues"
  },
  "license": "${license_spdx_id}",
  "icon": "assets/icon.png",
